if [ -f "$assets_dir/yarn.lock" ]; then
  yarn deploy
else
  # check if a deploy script exists before attempting to run
  deploy_script=$(node -p -e "let s = require('./package.json').scripts; s && s.deploy || ''")

  if [ -n "$deploy_script" ]; then
    npm run deploy
  fi
fi

cd $phoenix_dir

mix "${phoenix_ex}.digest"

if mix help "${phoenix_ex}.digest.clean" 1>/dev/null 2>&1; then
  mix "${phoenix_ex}.digest.clean"
fi
